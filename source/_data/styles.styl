/**********************************************************/
/************************ 按钮 ****************************/
/**********************************************************/

/* 默认按钮 */
.btn {
  color: white!important;
  border: none;
  border-radius: $myradius;
  background: $btn-default-bg;
  btn-shadow-only();

  &:hover {
    background: $btn-default-hover-bg;
    btn-shadow-hover-only();
  }
}

/* 返回最上按钮 */
.back-to-top {
  background: $btn-default-bg;
  opacity: .8;
  font-weight: bold;
  font-size: 1em;
  border-radius: 1em;

  &:hover {
    color: #fff;  
  }
}

/* 赞赏 */
.donation {
  text-align: center;
  margin-top: 3em;
}

.donation-label {
  margin-bottom: 1em;
  letter-spacing: 1px;
  font-size: .9em;
  font-weight: bold;
}

.donation-button {
  box-shadow: $box-shadow;
  height: 2.5em;
  line-height: 1.5;
  box-sizing: border-box;
  border: none;
  padding: .6em .9em;
  border-radius: 4px;
  font-size: .9em;
  color: white!important;
  background-color: #946ce6;
  font-weight: bold;

  &:hover {
    color: white;
    border-color: transparent;
  }
}


/************************************************************/
/************************ 页码页脚 ***************************/
/************************************************************/

/* 删去页码栏外框 */
.pagination {
  border: none !important;
  background: none !important;
  box-shadow: none !important;
}

/* 页码按钮 */
.pagination .prev,
.pagination .next,
.pagination .page-number {
  border: none;
  border-radius: $myradius;

  &:hover {
    color: white;
    background: $btn-default-hover-bg;
    btn-shadow-hover-only();
  }
}

/* 当前页码 */
.pagination .page-number.current {
  background: $btn-default-bg;
  btn-shadow-only();

  @media (prefers-color-scheme: dark) {
    color: white;
  }
}

/* 页脚 */
.footer {
  margin-top: 50px;
  padding-bottom: 40px;
  color: var(--blockquote-color);
}

.footer a {
  color: var(--blockquote-color);
  border-bottom:none;

  &:hover {
    color: var(--text-color);
  }
}


/************************************************************/
/************************ 分类标签 ***************************/
/************************************************************/

/* 标签云 */
.tag-cloud a {
  padding: 2px 10px;
  margin: 8px;
  background: $whitesmoke;
  border-bottom: none;
  border-radius: 15px;
