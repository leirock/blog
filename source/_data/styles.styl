.atk-textarea {
	background-image: url($comment-bg-url) !important;
	background-repeat: no-repeat !important;
	background-position: right !important;
}

.atk-textarea:focus {
	background-position-y: 200px !important;
	transition: all .2s ease-in-out 0s !important;
}

/* 评论提交按钮 */
.atk-send-btn {
  font-weight: bold !important;
  color: white !important;
  border-color: $btn-default-bg !important;
  background: $btn-default-bg !important;
  border-radius: 1rem !important;

  &:hover {
    border-color: $btn-default-hover-bg !important;
    background: $btn-default-hover-bg !important;
  }
}

/* 评论区代码 */
.artalk code, .atk-layer-wrap code {
  font-size: .875em !important;
}

/* 评论时间 */
.atk-dark-mode .atk-date {
  color: #666 !important;
}

/* 深色模式颜色 */
.artalk.atk-dark-mode,
.atk-layer-wrap.atk-dark-mode {
  --at-color-font: $text-color-dark !important;
  --at-color-meta: $text-color-dark !important;
  --at-color-grey: $text-color-dark !important;
  --at-color-bg: $body-bg-color-dark !important;
}

@media (prefers-color-scheme: dark) {
  .atk-list-read-more .atk-list-read-more-inner,
  .atk-comment .atk-height-limit-btn {
