/************************* Header **************************/

/* header-隐藏顶部线条 */
.headband {
  display: none;
}

/* header-顶部空白 */
.header,
.main-inner {
  margin-top: 10px;

  +mobile() {
    margin-top: 0;
  }
}

/* 圆角 */
.header-inner, ///顶部圆角
.sidebar-inner { //侧边头像圆角
  border-radius: $myradius;
}

.site-brand-container {
  border-radius: $myradius $myradius 0 0;

  +mobile() {
    border-radius: 0 0 $myradius $myradius;
  }
}

/* header-页面背景 */
body {
  background-image: url($body-bg-url);
  background-repeat: repeat;
  background-attachment: fixed;

  @media (prefers-color-scheme: dark) {
    background-image: none;
  }
}

/* Day of Mourning */
if (hexo-config('gray')) {
  html {
    -webkit-filter: grayscale(100%);
    -moz-filter: grayscale(100%);
    -ms-filter: grayscale(100%);
    -o-filter: grayscale(100%);
    filter: grayscale(100%);
    filter: gray;
  }
  @media (prefers-color-scheme: light) {
    body {
      background-image: url($body-bg-gray-url);
    }
  }
}

/************************ Sidebar **************************/

/* sidebar-标题背景 */
.site-brand-container {
  background: url($site-brand-bg-url);
  background-position: 70% 20%;
  background-size: cover;
}

/* sidebar-标题 */
.site-title {
  /*font-weight: bold;*/
  letter-spacing: 10px;
  padding-left: 10px; //修正字间距导致的标题左移
}

/* sidebar-副标题 */
.site-subtitle {
  font-family: $font-family-sans;
  color: var(--brand-color);
}

/* sidebar-站点描述介绍 */
.site-description {
  color: var(--blockquote-color);
  font-family: $font-family-quote;
  font-size: .9em;
}

/* sidebar-二级菜单圆角 */
.sub-menu {
  border-radius: $myradius !important;
}

.links-of-author-item a {
  font-size: 1.05em;
}

/************************** Post ***************************/

/* post-文章卡片圆角 */
.post-block,
.post-block+.post-block {
  border-radius: $myradius !important;
}

/* post-文章与页面标题 */
.posts-expand .post-title {
  font-size: 1.35em;
  font-weight: bold;

  +mobile() {
    margin-top: 10px;
  }
}

/* post-文章标题 */
.index .post-title,
.post .post-title {
  text-align: left;
  border-left: $btn-default-bg 8px solid;
  padding-left: 10px;
}

/* post-文章信息 */
.index .post-meta,
.post .post-meta {
  justify-content: left;
}

.posts-expand .post-header {
  margin-bottom: 30px;
}

.posts-expand .post-meta-container {
  /* 文字颜色 */
  color: var(--text-color);
  /* 时间下划线 */
  time {
    border-bottom: none;
  }
  /* 文章/页面描述 */
  .post-description {
    font-size: .95em;
  }
}

.post-meta-item a {
  border-bottom: none;
}

/* post-段后距 */
p {
  margin-bottom: 12px;
}

.post-body {
/* post-正文字号 */
  font-size: 1em;
/* post-正文一级标题下划线 */
  h2 {
    border-bottom: 1px dotted #eee;
  }
}

/* post-标签选择卡片加粗 */
.post-body .tabs ul.nav-tabs li.tab a {
  font-weight: bold;
}

/* post-超链接 */
.post-body a {
  text-decoration-color: var(--text-color);

  &:hover {
    border-bottom-color: var(--text-color-dark);
  }
}

/* post-图片标题 */
.post-body .image-caption {
  margin: 0 auto 15px;
  font-weight: 400;
}

/* post-图片阴影 */
.posts-expand .post-body img {
  box-shadow: $image-box-shadow;
}

/* post-引用与 note 字体 */
blockquote p,
.post-body .note {
  font-family: $font-family-quote;
}

/* post-思源宋体列表打叉修复 */
li {
  text-align: left;
}

/* post-提示卡片图标位置 */
.post-body .note:not(.no-icon)::before {
  top: .15em;
}

/* post-链接卡片样式 */
.post-body .link-grid .link-grid-container {
  border: 2px solid #ddd;
  border-radius: $myradius;
  box-shadow: .2rem .2rem 0.5rem rgba(0,0,0,0.2);

  &:hover {
    animation: none;
  }

  &:active {
    box-shadow: none;
    transform: none;
  }
}

.post-body .link-grid .link-grid-container p {

  &:first-of-type {
    font-weight: bold;
    font-size: 1.1em;
    color: #2bbc8a;
  }

  &:last-of-type {
    font-size: .85em;
  }
}

/************************ Button ***************************/

/* button-back2top */
.back-to-top {
  background: $btn-default-bg;
  opacity: .8;
  font-weight: bold;
  font-size: 1em;
  border-radius: 1em;

  &:hover {
    color: #fff;  
  }
}

/* button-reward */
.donations {
  text-align: center;
  margin-top: 3em;
}

.donation-label {
  margin-bottom: 1em;
  letter-spacing: 1px;
  font-size: .9em;
  font-weight: bold;
}

.afdian-button {
  box-shadow: $box-shadow;
  height: 2.5em;
  line-height: 1.5;
  box-sizing: border-box;
  border-color: transparent;
  padding: .5em .75em;
  border-radius: 4px;
  font-size: .9em;
  color: white;
  background-color: #946ce6;

  &:hover {
    color: white;
    border-color: transparent;
  }
}

/* 修改选中字符的颜色 */
::selection {
  background: rgba(0, 149, 255, 0.2);
  color: var(--blockquote-color);
}

/****************** Pagination & Footer ********************/

/* pagination-删去页码框 */
.pagination {
  border: none !important;
  background: none !important;
  box-shadow: none !important;
}

/* pagination-页码按钮 */
.pagination .prev,
.pagination .next,
.pagination .page-number {
  border: none;
  border-radius: $myradius;

  &:hover {
    color: white;
    background: $btn-default-hover-bg;
    btn-shadow-hover-only();
  }
}

/* pagination-当前页码 */
.pagination .page-number.current {
  background: $btn-default-bg;
  btn-shadow-only();

  @media (prefers-color-scheme: dark) {
    color: #fff;
  }
}

/* footer */
.footer {
  margin: 20px 0 15px 0;
  color: var(--blockquote-color);
}

/************************ Overview *************************/

/* categories 
+mobile() {
  .category-all-page .category-list-item {
    margin: 10px 40px;
  }

  .category-all-page .category-all ul {
    list-style-type: disc;
  }
}

+tablet-desktop() {*/
.category-all-page .category-list-item {
  margin: 10px 12px;
}

ul.category-list {
  text-align: center;
}

li.category-list-item {
  display: inline-block;
}

li.category-list-item a {
  line-height: 5;
  word-break: keep-all;
  padding: 10px 15px;
  font-weight: bold;
  color: white;
  background: $btn-default-bg;
  border-bottom: none;
  border-radius: 15px;
  btn-shadow();

  &:hover {
    text-decoration: none;
  }
}

/* tags */
.tag-cloud a, //标签云
.posts-expand .post-tags a { //文章末标签
  padding: 2px 10px;
  margin: 8px;
  background: $whitesmoke;
  border-bottom: none;
  border-radius: 15px;
  btn-shadow();

  &:hover {
    color: white !important;
    text-decoration: none;
  }

  @media (prefers-color-scheme: dark) {
    color: var(--text-color) !important;
    background: $btn-default-bg;
  }
}

/************************* Comment ************************/

/* comment-圆角 */
.comments {
  border-radius: $myradius !important;
}

/* comment-评论超链接下划线 */
.comments a {
  border-bottom: none;  
}

/* comment-输入框背景图片 */
.veditor {
	background-image: url($comment-bg-url) !important;
	background-repeat: no-repeat !important;
	background-position: right !important;
}
.veditor:focus {
	background-position-y: 200px !important;
	transition: all .2s ease-in-out 0s !important;
}

/* comment-输入框黑暗模式 */
@media (prefers-color-scheme: dark) {
  body {
    --waline-text-color: $text-color-dark !important;
    --waline-bgcolor: $content-bg-color-dark !important;
    --waline-bgcolor-light: $body-bg-color-dark !important;
  }
}

.v[data-class=v] .vheader input, 
.v[data-class=v] .vheader label,
.v[data-class=v] .vbtn {
  font-size: .8em !important;
}

/* comment-管理登录按钮 */
.v[data-class=v] .vbtn:hover {
    border-color: $btn-default-hover-bg !important;
    color: $btn-default-hover-bg !important;
}

/* comment-评论提交按钮 */
.v[data-class=v] .vbtn.primary {
  color: white !important;
  border-color: $btn-default-bg !important;
  background: $btn-default-bg !important;

  &:hover {
    border-color: $btn-default-hover-bg !important;
    background: $btn-default-hover-bg !important;
  }
}

/************************* 卡片页面 (Friends/Lab) ************************/

.post-body .mygrid {
  gap: 1rem 1rem;
  grid-gap: 1rem 1rem;
}

.post-body .mygrid .link-grid-container p:first-of-type {
  color: var(--text-color);
}

.post-body .mygrid .link-grid-container {
  box-shadow: none;
  padding: 0;
  border-radius: 0;
  border-top: none;
  border-left: none;
  border-right: none;
  border-bottom: 1px dashed #d3d3d4;

  &:hover {
    background: none;
    color: var(--link-hover-color);
  }

  &:hover p:first-of-type {
      color: var(--link-hover-color);
    }
}


.post-body .mygrid .link-grid-container p {
  margin: 0 1rem 0 5rem;
  
  &:first-of-type {
    font-size: 1em;
    margin-top: 3px;
    white-space: nowrap; //禁止换行、超出隐藏
    overflow: hidden;
    text-overflow: ellipsis;
  }

  &:last-of-type {
    font-size: 0.875em;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    opacity: 1;
  }
}

.post-body .mygrid .link-grid-container .link-grid-image {
  border: 1px solid #ddd;
  border-radius: 0;
  height: 4rem;
  padding: 0;
  width: 4rem;
}


/************************* 特殊样式排版 ************************/

/* 着重号 `{% dot 强调的文字 %}` */
.emphasis-point {
  font-style: normal;
  text-emphasis: '•';
  -webkit-text-emphasis: '•';
  -moz-text-emphasis: '•';
  text-emphasis-position: under;
  -webkit-text-emphasis-position: under;
  -moz-text-emphasis-position: under;
}

/* 分割线 `<hr>` 或 `***` 或 `---` */
hr {
  background-image: none;
  height: 2em;
  border: none;
  margin: 1em 0 1em;
  text-align: center;

  &::after {
    content: "···";
    letter-spacing: 2em;
    padding-left: 2em;
    font-weight: bold;
  }
}