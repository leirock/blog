/************************* Header **************************/

/* header-隐藏顶部线条 */
.headband {
  display: none;
}

/* header-顶部空白 */
.header,
.main-inner {
  margin-top: 10px;

  +mobile() {
    margin-top: 0;
  }
}

/* 圆角 */
.header-inner, ///顶部圆角
.sidebar-inner { //侧边头像圆角
  border-radius: $myradius;
}

.site-brand-container {
  border-radius: $myradius $myradius 0 0;

  +mobile() {
    border-radius: 0 0 $myradius $myradius;
  }
}

/* header-页面背景 */
body {
  background-image: url($body-bg-url);
  background-repeat: repeat;
  background-attachment: fixed;

  @media (prefers-color-scheme: dark) {
    background-image: none;
  }
}

/* Day of Mourning */
if (hexo-config('gray')) {
  html {
    -webkit-filter: grayscale(100%);
    -moz-filter: grayscale(100%);
    -ms-filter: grayscale(100%);
    -o-filter: grayscale(100%);
    filter: grayscale(100%);
    filter: gray;
  }
  @media (prefers-color-scheme: light) {
    body {
      background-image: url($body-bg-gray-url);
    }
  }
}

/* 修改选中字符的颜色 */
::-moz-selection { /* Code for Firefox */
  background: rgba(0, 149, 255, .2);
  color: var(--blockquote-color);
}

::selection {
  background: rgba(0, 149, 255, .2);
  color: var(--blockquote-color);
}

/************************ Sidebar **************************/

/* sidebar-标题背景 */
.site-brand-container {
  background: url($site-brand-bg-url);
  background-position: 70% 20%;
  background-size: cover;
}

/* sidebar-标题 */
.site-title {
  /*font-weight: bold;*/
  letter-spacing: 10px;
  padding-left: 10px; //修正字间距导致的标题左移
}

/* sidebar-副标题 */
.site-subtitle {
  font-family: $font-family-sans;
  color: var(--brand-color);
}

/* sidebar-站点描述介绍 */
.site-description {
  color: var(--blockquote-color);
  font-family: $font-family-quote;
  font-size: .9em;
}

.menu-item a {
  font-size: .85em;
}

/* sidebar-二级菜单圆角 */
.sub-menu {
  border-radius: $myradius !important;
}

/* sidebar-社交媒体图标 */
.links-of-author-item a {
  font-size: 1.05em;
}

/************************** Post ***************************/

/* post-文章卡片圆角 */
.post-block,
.post-block+.post-block {
  border-radius: $myradius !important;
}

/* post-文章与页面标题 */
.posts-expand .post-title {
  font-size: 1.4em;
  font-weight: bold;

  +mobile() {
    margin-top: 10px;
  }
}

/* post-文章标题 */
.index .post-title,
.post .post-title {
  text-align: left;
  border-left: $btn-default-bg 8px solid;
  padding-left: 10px;
}

/* post-文章信息 */
.index .post-meta,
.post .post-meta {
  justify-content: left;
}

.posts-expand .post-header {
  margin-bottom: 30px;
}

.posts-expand .post-meta-container {
  /* 文字颜色 */
  color: var(--text-color);
  /* 时间下划线 */
  time {
    border-bottom: none;
  }
  /* 文章/页面描述 */
  .post-description {
    font-size: .95em;
  }
}

/* post-文章信息项超链接 */
.post-meta-item a {
  border-bottom: none;
}

/* post-段后距 */
p {
  margin-bottom: 1em;
}

@media (min-width: 1200px) {
  .post-body {
    font-size: 1.09em;
  }
}

/* post-标签选择卡片加粗 */
.post-body .tabs ul.nav-tabs li.tab a {
  font-weight: bold;
}

/* post-超链接 */
.post-body a {
  text-decoration-color: var(--link-color);

  &:hover {
    border-bottom-color: var(--link-hover-color);
  }
}

/* post-图片标题 */
.post-body .image-caption {
  margin: 0 auto 1em;
  font-weight: 400;
}

/* post-图片阴影 */
.posts-expand .post-body img {
  box-shadow: $image-box-shadow;
}

/* post-引用与 note 字体 */
blockquote p,
.post-body .note {
  font-family: $font-family-quote;
}

/* post-引用字体颜色 */
blockquote {
  color: var(--text-color);
  background: #f4f5f7;
  border-left: .25em solid #e3e6eb;

  &.blockquote-center {
    background: none;
  }

  @media (prefers-color-scheme: dark) {
    background: $blockquote-bg-color-dark;
    border-left: .25em solid #435266;
  }
  
}

/* post-代码路径字体 */
figcaption {
  font-family: $font-family-monospace;
}

/* post-行内代码 */
code {
  background: #e6e8ee !important; //加!important是为了适配评论中的代码样式
  
  @media (prefers-color-scheme: dark) {
    background: #3e4b5e !important;
  }
}

pre[class*=language-] {
  background: $highlight-background;
  font-size: .85em;

  @media (prefers-color-scheme: dark) {
    background: $highlight-background-dark;
    border-radius: 0;
  }
}

pre[class*=language-]:before {
  color: var(--t-l);
  content: attr(data-language);
  font-size: 1.9em;
  font-weight: 700;
  opacity: .15;
  position: absolute;
  right: .3rem;
  top: .1em;
  text-transform: uppercase;
}

code[class*=language-] {
  background: none !important;
  white-space: break-spaces;
}

.language-css .token.string, .style .token.string, .token.entity, .token.operator, .token.url {
    background: none;
}

.token.deleted {
  background: #fdd;
}
.token.inserted {
  background: #dfd;
}

@media (prefers-color-scheme: dark) {
  .token.deleted {
    background: #654545;
  }
  .token.inserted {
    background: #466548;
  }
}

/* post-表格边框 */
td, th {
  border-color: #e3e6eb;

  @media (prefers-color-scheme: dark) {
    border-color: #3e4b5e !important;
  }
}

/* post-表格背景 */
tbody tr {
  &:hover {
    background: var(--content-bg-color);
  }
  &:nth-of-type(odd):hover {
    background: var(--table-row-odd-bg-color);
  }
}

/* post-思源宋体列表打叉修复 */
li {
  text-align: left;
}

/* post-提示卡片图标位置 */
.post-body .note:not(.no-icon)::before {
  top: .15em;
}

/* post-文章结尾版权信息 */
