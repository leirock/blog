/* tags */
//标签云
.tag-cloud a {
  padding: 2px 10px;
  margin: 8px;
  background: $whitesmoke;
  border-bottom: none;
  border-radius: 15px;
  btn-shadow();

  &:hover {
    color: white !important;
    text-decoration: none;
  }

  @media (prefers-color-scheme: dark) {
    color: var(--text-color) !important;
    background: $btn-default-bg;
  }
}

//文章末标签
.post-tags {
  text-align: left;
  
  & a {
  border-bottom: none;
  }
}

/************************* Comment ************************/

/* comment-圆角 */
.comments {
  border-radius: $myradius !important;
}

/* comment-超链接 */
.comments a {
  color: var(--text-color) !important;
  display: inline !important;

  &:hover {
    color: var(--link-hover-color) !important;
  }

  &.at {
    border-bottom: none !important;
  }

}

.v[data-class=v] .vaction:hover, //评论框左下角
.v[data-class=v] .vcard .vhead .vreply:hover, //回复按钮
.v[data-class=v] .vcard .vhead .vreply.active {
    color: var(--link-hover-color) !important;
}

/* comment-评论列表昵称链接 */
.v[data-class=v] .vcard .vhead .vnick {
  color: var(--text-color) !important;
  border-bottom: none !important;

  &:hover {
    color: var(--link-hover-color) !important;
  }
}

/* comment-输入框背景图片 */
.veditor {
	background-image: url($comment-bg-url) !important;
	background-repeat: no-repeat !important;
	background-position: right !important;
}
.veditor:focus {
	background-position-y: 200px !important;
	transition: all .2s ease-in-out 0s !important;
}

/* comment-输入框黑暗模式 */
@media (prefers-color-scheme: dark) {
  body {
    --waline-text-color: $text-color-dark !important;
    --waline-bgcolor: $content-bg-color-dark !important;
    --waline-bgcolor-light: $body-bg-color-dark !important;
  }
}

/* comment-字号字重 */
.v[data-class=v] .vheader label,
.v[data-class=v] .vheader input, 
.v[data-class=v] .veditor,
.v[data-class=v] .vcard .vhead .vnick,
.v[data-class=v] .vcard .vcontent {
  font-size: .9em !important;
}

/* comment-管理登录按钮 */
.v[data-class=v] .vbtn {
  font-size: .8em !important;

  &:hover {
    border-color: $btn-default-hover-bg !important;
    color: $btn-default-hover-bg !important;
  }
  
  @media (prefers-color-scheme: dark) {
    border-color: #3e4b5e !important;
  }
}

/* comment-评论提交按钮 */
.v[data-class=v] .vbtn.primary {
  font-weight: bold !important;
  color: white !important;
  border-color: $btn-default-bg !important;
  background: $btn-default-bg !important;

  &:hover {
    border-color: $btn-default-hover-bg !important;
    background: $btn-default-hover-bg !important;
  }
}

/************************* 链接卡片  ************************/

/* 普通卡片 */
.post-body .link-grid .link-grid-container {
  border: 2px solid #ddd;
  border-radius: $myradius;
  box-shadow: .2rem .2rem .5rem rgba(0, 0, 0, .2);

  &:hover {
    animation: none;
  }

  &:active {
    box-shadow: none;
    transform: none;
  }
}

.post-body .link-grid .link-grid-container p {

  &:first-of-type {
    font-weight: bold;
    font-size: 1.1em;
    color: #2bbc8a;
  }

  &:last-of-type {
    font-size: .85em;
  }
}


/* 友链卡片 */
.post-body .mygrid {
  gap: 1rem 1rem;
  grid-gap: 1rem 1rem;
}

.post-body .mygrid .link-grid-container p:first-of-type {
  color: var(--text-color);
}

.post-body .mygrid .link-grid-container {
  box-shadow: none;
  padding: 0;
  border-radius: 0;
  border-top: none;
  border-left: none;
  border-right: none;
  border-bottom: 1px dashed #d3d3d4;

  &:hover {
    background: none;
    color: var(--link-hover-color);
  }

  &:hover p:first-of-type {
      color: var(--link-hover-color);
    }
}


.post-body .mygrid .link-grid-container p {
  margin: 0 1rem 0 5rem;
  
  &:first-of-type {
    font-size: 1em;
    margin-top: 3px;
    white-space: nowrap; //禁止换行、超出隐藏
    overflow: hidden;
    text-overflow: ellipsis;
  }

  &:last-of-type {
    font-size: .875em;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    opacity: 1;
  }
}

.post-body .mygrid .link-grid-container .link-grid-image {
  border: 1px solid #ddd;
  border-radius: 0;
  height: 4rem;
  padding: 0;
  width: 4rem;
}


/************************* 特殊样式排版 ************************/

/* 着重号 `{% dot 强调的文字 %}` */
.emphasis-point {
  font-style: normal;
  text-emphasis: '•';
  -webkit-text-emphasis: '•';
  -moz-text-emphasis: '•';
  text-emphasis-position: under;
  -webkit-text-emphasis-position: under;
  -moz-text-emphasis-position: under;
}

/* 分割线 `<hr>` 或 `***` 或 `---` */
hr {
  background-image: none;
  height: 2em;
  border: none;
  margin: 1em 0 1em;
  text-align: center;

  &::after {
    content: "···";
    letter-spacing: 2em;
    padding-left: 2em;
    font-weight: bold;
  }
}

