  @media (prefers-color-scheme: dark) {
    color: var(--text-color);
    background: #2f3947;
  }
}

+mobile() {
  .license {
    margin: 15px -12px;
    padding: 1.25em 12px;
  }
}

+tablet() {
  .license {
    margin: 15px -20px;
    padding: 1.25em 20px;
  }
}

