/**********************************************************/
/************************ 评论框 ***************************/
/**********************************************************/

/* 评论卡片圆角 */
.comments {
  border-radius: $myradius !important;
  margin-top: 12px;
  background: var(--content-bg-color);
  box-shadow: $box-shadow;
}

/* 评论超链接 */
.comments a {
  color: var(--link-color) !important;
  transition: all .2s !important;
  border-bottom-color: var(--link-hover-color) !important;
  display: inline !important;

  &:hover {
    color: var(--link-hover-color) !important;
    border-bottom-width: 2px !important;
  }
}

/* 评论列表昵称 */
.atk-main .atk-nick,
.atk-main .atk-nick a {
  color: var(--link-hover-color) !important;
  border-bottom: none !important;
}

.artalk,
.atk-layer-wrap {
  --at-color-main: var(--link-hover-color) !important;
}

/* 评论用户信息填写区 */
.atk-main-editor>.atk-header {
  border-bottom: 1px solid var(--at-color-border) !important;
}

